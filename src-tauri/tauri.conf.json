{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "Steam Game Idler",
        "version": "1.5.12"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "close": true,
                "hide": true,
                "show": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "unminimize": true,
                "startDragging": true,
                "setSize": true,
                "setPosition": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "**"
                ]
            },
            "dialog": {
                "ask": true
            },
            "shell": {
                "open": true
            },
            "path": {
                "all": true
            },
            "process": {
                "relaunch": true
            }
        },
        "bundle": {
            "active": true,
            "category": "Utility",
            "copyright": "Copyright Â© 2024 ProbablyRaging",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.ico"
            ],
            "identifier": "com.ProbablyRaging.steam-game-idler",
            "longDescription": "Idle any game in your Steam library",
            "shortDescription": "Steam Game Idler",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [
                "libs/*"
            ],
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://raw.githubusercontent.com/ProbablyRaging/steam-game-idler/main/latest.json"
            ],
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQyMTE5REMyMUFGRUYyQzcKUldUSDh2NGF3cDBSMGh6UVk2a1NKNFV0d1BBcnZsRnFFdDkvTTR0KzJQN0hjOTJzSWFpMFhGaysK",
            "windows": {
                "installMode": "passive"
            }
        },
        "windows": [
            {
                "fullscreen": false,
                "width": 1268,
                "height": 620,
                "minWidth": 1268,
                "minHeight": 620,
                "resizable": true,
                "title": "Steam Game Idler",
                "decorations": false,
                "transparent": true,
                "focus": true
            }
        ]
    }
}
